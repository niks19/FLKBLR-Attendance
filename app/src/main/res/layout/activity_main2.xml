<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"                                             xmlns:app="http://schemas.android.com/apk/res-auto"                                             xmlns:tools="http://schemas.android.com/tools"                                             android:layout_width="match_parent"                                             android:layout_height="match_parent">    <LinearLayout android:layout_width="match_parent"                  android:orientation="vertical"                  android:layout_height="match_parent"                  android:padding="5dp"                  tools:layout_editor_absoluteY="8dp"                  tools:layout_editor_absoluteX="8dp">        <Button            android:layout_width="match_parent"            android:layout_height="0dp"            android:text="WITH FOLK ID"            android:textSize="35dp"            android:textStyle="bold"            android:id="@+id/b1"            android:background="#986"            android:fontFamily="sans-serif-smallcaps"            android:textColor="#f4f4f4"            android:layout_marginTop="5dp"            android:layout_marginBottom="5dp"            android:layout_weight="1"/>        <Button            android:layout_width="match_parent"            android:layout_height="1dp"            android:id="@+id/b2"            android:text="Guest"            android:textColor="#f4f4f4"            android:textStyle="bold"            android:background="#986"            android:textSize="35dp"            android:layout_marginBottom="5dp"            android:fontFamily="sans-serif-smallcaps"            android:layout_weight="1"/>    </LinearLayout></LinearLayout>