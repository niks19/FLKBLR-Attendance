<?xml version="1.0" encoding="utf-8"?><ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="in.folknet.folkbloreattendance.FOLK"><LinearLayout    android:layout_width="match_parent"    android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:layout_width="fill_parent"            android:background="#f2f2f2"            android:layout_height="fill_parent"            android:orientation="vertical"            android:padding="5dp">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="ENTER FULL FOLK ID"                android:gravity="center"                android:layout_marginTop="13dp"                android:layout_marginBottom="20dp"                android:fontFamily="sans-serif-smallcaps"                android:textSize="25dp"                android:textStyle="bold"                android:textColor="#686363"                />                <EditText                    android:id="@+id/et"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginBottom="10dp"                    android:hint="FOLK ID"                    android:inputType="textCapCharacters"                    android:maxLength="11"                    android:textAllCaps="true"                    />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="Every day how many Rounds of Hare Krishna Mantra do you chant?"                android:gravity="center"                android:layout_marginTop="13dp"                android:layout_marginBottom="20dp"                android:fontFamily="sans-serif-smallcaps"                android:textSize="15dp"                android:textStyle="bold"                android:textColor="#686363"                />            <EditText                android:id="@+id/etjp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="10dp"                android:hint="One Round = 108 times Hare Krishna Mantra"                android:inputType="textCapCharacters"                android:maxLength="11"                android:textAllCaps="true"                />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="@string/area_prompt"                android:gravity="center"                android:layout_marginTop="13dp"                android:layout_marginBottom="20dp"                android:fontFamily="sans-serif-smallcaps"                android:textSize="15dp"                android:textStyle="bold"                android:textColor="#686363"                />            <Spinner                android:id="@+id/spinner_area"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:entries="@array/area_arrays"                android:padding="10dp"                android:paddingBottom="20dp"                android:prompt="@string/area_prompt" />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="SELECT THE WORKSHOP"                android:gravity="center"                android:layout_marginTop="13dp"                android:layout_marginBottom="0dp"                android:fontFamily="sans-serif-smallcaps"                android:textSize="25dp"                android:textStyle="bold"                android:textColor="#686363"                />            <RadioGroup                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/rg"                android:layout_marginTop="8dp"                android:id="@+id/radioGroup">                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/one"                    android:text="HAPPINESS WORKSHOP"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/two"                    android:text="SELF EMPOWERMENT"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THREEg"                    android:text="DEEP IMPACT"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THREE"                    android:text="SPECIAL EVENT"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THREEJ"                    android:text="ILLUMINIZE"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THREGE"                    android:text="FOLK HANGOUTS"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/JJ"                    android:text="FOLK LABS"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THRELE"                    android:text="MANTRA RETREAT"                    android:checked="false"                    android:textSize="15dp"/>                <RadioButton                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif-smallcaps"                    android:textStyle="bold"                    android:id="@+id/THSDRELE"                    android:text="SERVICE"                    android:checked="false"                    android:textSize="15dp"/>            </RadioGroup>            <Button                android:id="@+id/btn"                android:layout_width="fill_parent"                android:layout_height="wrap_content"                android:layout_marginTop="16dp"                android:layout_alignParentBottom="true"                android:background="#986"                android:fontFamily="sans-serif-smallcaps"                android:textStyle="bold"                android:textColor="#f4f4f4"                android:text="Submit"                />            <!-- Login Button -->            <!-- Link to Login Screen -->        </LinearLayout>    </RelativeLayout></LinearLayout></ScrollView>